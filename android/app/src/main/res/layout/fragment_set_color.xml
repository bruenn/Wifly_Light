<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context=".WiflyControlActivity">

    <de.WyLight.WyLight.view.ColorView
        android:id="@+id/colorStatus"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip" />

    <ImageView
        android:id="@+id/colorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_wheel" />

    <ImageView
        android:id="@+id/crosshair"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_knob" />

    <View
        android:id="@+id/valuePicker"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/colorPicker"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="#ffff0000" />

    <ImageView
        android:id="@+id/valueCrosshair"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignTop="@id/valuePicker"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:src="@drawable/color_picker_knob" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/valuePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip">

        <de.WyLight.WyLight.view.ColorView
            android:id="@+id/red"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            custom:color="0xffff0000" />

        <de.WyLight.WyLight.view.ColorView
            android:id="@+id/yellow"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            custom:color="0xffffff00" />

        <de.WyLight.WyLight.view.ColorView
            android:id="@+id/green"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            custom:color="0xff00ff00" />

        <de.WyLight.WyLight.view.ColorView
            android:id="@+id/cyan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            custom:color="0xff00ffff" />

        <de.WyLight.WyLight.view.ColorView
            android:id="@+id/blue"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            custom:color="0xff0000ff" />

        <de.WyLight.WyLight.view.ColorView
            android:id="@+id/magenta"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="20dip"
            android:layout_weight="0.125"
            android:adjustViewBounds="true"
            custom:color="0xffff00ff" />
    </LinearLayout>
</RelativeLayout>